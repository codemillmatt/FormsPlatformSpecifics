<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:PlatSpec" x:Class="PlatSpec.PlatSpecPage"
		Title="Main Page">
		<StackLayout VerticalOptions="Center">
		<StackLayout Orientation="Horizontal">
		<Label Text="iOS Button Touch Highlight Enabled?" />
		<Switch x:Name="touchEnabledSwitch"></Switch>
		</StackLayout>
		<Button Text="Click Me!"  HorizontalOptions="Fill" x:Name="theButton" BackgroundColor="Red" TextColor="White" />
		</StackLayout>
</ContentPage>
